#!/usr/bin/env bash
export DIR="$(cd "$(dirname "${BASH_SOURCE[0]}" )" && pwd)"
export PDIR="$(dirname $DIR)"

# NewPath .bashrc | .zshrc
appendPath() {
    BU_PATH=$HOME/$2
    backupFile "$BU_PATH"
    newPath="export PATH=$1:\${PATH}"
    grep -qF "$newPath" $BU_PATH || echo "$newPath" >> $BU_PATH
    source $BU_PATH 2>/dev/null
}

backupFile() {
    if [ ! -f $1.ORIGINAL ]; then
        cp $1 $1.ORIGINAL
    fi
}
echo "Enter a new password for user ubuntu:"
sudo passwd ubuntu
sudo apt-get update
sudo apt-get install -y net-tools nmap openssl sqlmap traceroute unzip
${DIR}/setupDocker
${DIR}/setupVim
${DIR}/setupDvwa
${DIR}/setupMetasploit
${DIR}/setupMetasploitable
${DIR}/getRockYouWordList
${DIR}/setupDesktop
${DIR}/setupBrowsers
${DIR}/setupPython
appendPath ${DIR}/ .bashrc
echo "Si penyerang selesai!"
