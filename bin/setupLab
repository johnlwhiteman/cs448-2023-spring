#!/usr/bin/env bash
export DIR="$(cd "$(dirname "${BASH_SOURCE[0]}" )" && pwd)"
export PDIR="$(dirname $DIR)"

# NewPath .bashrc | .zshrc
appendPath() {
    BU_PATH=$HOME/$2
    backupFile "$BU_PATH"
    newPath="export PATH=$1:\${PATH}"
    grep -qF "$newPath" $BU_PATH || echo "$newPath" >> $BU_PATH
    source $BU_PATH 2>/dev/null
}
backupFile() {
    if [ ! -f $1.ORIGINAL ]; then
        cp $1 $1.ORIGINAL
    fi
}

installJava() {
    sudo apt-get install -y default-jdk
    javac --version
}

installMisc() {
    sudo apt-get install -y cmatrix cowsay gobuster lolcat \
                            libimage-exiftool-perl poppler-utils tree
}

installPython() {
    pip install Flask
}

setupGit() {
    git config --global user.name "$1" 
    git config --global user.email "<>"
    git config --global core.editor vim 
}

setupSsh() {
    sudo systemctl enable ssh
    sudo systemctl start ssh
    return
    path=~/.ssh/id_ed25519
    if [[ -f "$path" ]]; then
	echo "SSH keys already exist. Ignoring setup."
        return
    fi
    echo -n "Enter a passphrase for SSH:  "
    read -s passphrase 
    ssh-keygen -t ed25519 -f "$path" -C "$1" -N "$2" <<< $'\ny'
    chmod 700 ~/.ssh
    chmod 644 ~/.ssh/id_ed25519.pub
    chmod 600 ~/.ssh/id_ed25519
    ls -al ~/.ssh
    echo -e "\nHere is your public key:\n"
    cat ~/.ssh/id_ed25519.pub
}

updateOs() {
    sudo apt-get update
}
sudo echo -e "\nWelcome!\n"

echo -n "Enter your full name: "
read name
echo -n "And your UP e-mail: "
read email
setupSsh "$email" "$passphrase"
updateOs
setupGit "$name" "$email"
installJava
installPython
installMisc
${DIR}/setupChrome
${DIR}/setupDocker
${DIR}/setupGhidra
${DIR}/setupRadamsa
${DIR}/setupVim
${DIR}/setupVsCode
${DIR}/runMatrix 2
cowsay "Please ReMOOt This VM" | lolcat
